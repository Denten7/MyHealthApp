<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.helloworld.MainActivity" >

    <TextView
        android:id="@+id/tv_discovery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_discorvery"
        android:layout_width="fill_parent"
        android:layout_height="77dp"
        android:text="Poišči naprave"
        android:background="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btn_stopdiscorvery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop Discovery" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Najdene naprave"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

    <ListView
        android:id="@+id/list_scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="Prijavi z drugim računom"
        android:id="@+id/odjava"
        android:layout_gravity="right" />

    <ListView
        android:id="@+id/list_connected"
        android:layout_width="fill_parent"
        android:layout_height="600dp" />

</LinearLayout>